@model Nagarro.EventManagement.Shared.EventCommentVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.DurationInHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.DurationInHours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.OtherDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.OtherDetails)
        </dd>
        <dt class="col-sm-2">
            <p>Number of Invitations Sent</p>
        </dt>
        <dd class="col-sm-10">
            @ViewBag.TotalInvite
        </dd>
    </dl>
</div>

<hr />



@*<partial name="_CommentPartial" for="PostComment" />*@

<h2>Write a Comment</h2>

<div class="row">
        <div class="col-md-4">
            <form asp-action="CommentPost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<div class="form-group">
                    <label asp-for="Comment.CommentID" class="control-label"></label>
                    <input asp-for="Comment.CommentID" class="form-control" />
                    <span asp-validation-for="Comment.CommentID" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label class="control-label"></label>
                    <input asp-for="Comment.Message" class="form-control" />
                    <span asp-validation-for="Comment.Message" class="text-danger"></span>
                </div>
                <div style="display:none">
                    <label asp-for="Comment.EventId" class="control-label"></label>
                    <input asp-for="Comment.EventId" class="form-control" />
                    <span asp-validation-for="Comment.EventId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Post Comment" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

<hr />

<h3>Past Comments</h3>


    @if (Model.Event.Comments != null)
    {
        foreach (var item in Model.Event.Comments)
        {
            <ul >
                <li > <span> <strong>@item.Commentor : </strong></span>@item.Message </li>
            </ul>
        }
    }




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
